<div class="container">
  <h1>Mi Lista de Tareas</h1>

  <!-- Label accesible oculto -->
  <label for="new-task" class="sr-only">Nueva tarea</label>
  <input
    id="new-task"
    type="text"
    placeholder="Escribe una tarea"
    value={{this.newTask}}
    {{on "input" this.updateNewTask}}
  />
  <button type="button" {{on "click" this.addTask}}>Agregar</button>

  <ul>
    {{#each this.tasks as |task index|}}
      <li class={{if task.completed "completed"}}>
        {{task.name}}
        <div class="task-buttons">
          <button type="button" {{on "click" (fn this.completeTask index)}}>âœ…</button>
          <button type="button" {{on "click" (fn this.deleteTask index)}}>âŒ</button>
        </div>
      </li>
    {{/each}}
  </ul>

  <div class="navigation-buttons">
    <LinkTo @route="completed" class="nav-button">Tareas Completadas</LinkTo>
    <LinkTo @route="deleted" class="nav-button">Tareas Eliminadas</LinkTo>
  </div>
</div>

